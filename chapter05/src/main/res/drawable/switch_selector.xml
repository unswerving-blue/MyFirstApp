<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--off状态-->
    <item android:state_checked="false">
        <!--使用layer-list 调整图片大小-->
        <layer-list>
            <item android:drawable="@drawable/switch_off" android:width="50dp" android:height="50dp" />
        </layer-list>
    </item>
    <!--on状态-->
    <item android:state_checked="true">
        <!--使用layer-list 调整图片大小-->
        <layer-list>
            <item android:drawable="@drawable/switch_on" android:width="50dp" android:height="50dp" />
        </layer-list>
    </item>
</selector>